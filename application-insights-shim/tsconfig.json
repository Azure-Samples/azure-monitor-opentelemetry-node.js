{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "inlineSources": true,
      "sourceMap": true,
      "declaration": true,
      "noImplicitAny": true,
      "outDir": "src/out",
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/*.ts",
    ],
    "exclude": [
      "node_modules"
    ]
}